# Server configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# PostgreSQL configuration
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=discounts_db
PG_USER=postgres
PG_PASSWORD=postgres
PG_SSL=false

# OAuth2 configuration (authorization code flow)
OAUTH2_AUTHORIZATION_URL=https://auth.onlinegrocerystore.com/oauth/authorize
OAUTH2_TOKEN_URL=https://auth.onlinegrocerystore.com/oauth/token
OAUTH2_JWKS_URI=https://auth.onlinegrocerystore.com/oauth/jwks
OAUTH2_ISSUER=https://auth.onlinegrocerystore.com/
OAUTH2_AUDIENCE=discount-service
# Accept tokens signed with symmetric key (optional; if used, set OAUTH2_JWT_SECRET)
# OAUTH2_JWT_SECRET=changeme
# The expected scopes for the service (comma-separated). If left blank, scope checking is disabled.
OAUTH2_REQUIRED_SCOPES=discounts.read,discounts.write

# Cross-service integration (optional, for future use)
CART_SERVICE_BASE_URL=http://localhost:3001
