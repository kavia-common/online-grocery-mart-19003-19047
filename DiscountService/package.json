    "db:seed": "node src/db/seed.js"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ignore": [
      "node_modules",
      "package.json",
      "package-lock.json",
      "*.lock",
      "*.log",
